{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "outDir": "dist"
  },
  "include": ["src", "scripts", "test"]
}
