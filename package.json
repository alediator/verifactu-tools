{
  "name": "verifactu-tools",
  "version": "1.0.12",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "verifactu-tools-hash": "./scripts/calcular-hash.ts",
    "verifactu-tools-consultar": "./scripts/consultar-facturas.ts",
    "verifactu-tools-registrar": "./scripts/registrar-facturas.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build-scripts": "tsc --project tsconfig.json",
    "patch-xsd": "tsx scripts/patch-xsd-imports.ts",
    "codegen": "npm run patch-xsd && wsdl-tsclient wsdl/SistemaFacturacion.wsdl -o src/generated",
    "test": "jest"
  },
  "description": "Herramientas para Verifactu: generación de tipos, cliente SOAP y validación XML",
  "author": "alediator",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "tsup": "^8.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "wsdl-tsclient": "^1.7.1"
  },
  "dependencies": {
    "dotenv": "^17.2.0",
    "libxmljs2": "^0.37.0"
  }
}
